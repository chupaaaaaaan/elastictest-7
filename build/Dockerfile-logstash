FROM openjdk:8-stretch
WORKDIR /

COPY myApp-logstash.sh /myApp.sh

RUN : install filebeat and logstash and settings && \
        : "================some packages================" && \
        apt update && apt install -y curl tzdata apt-transport-https && \
        ln -sf /usr/share/zoneinfo/Asia/Tokyo /etc/localtime && \
        : "================logstash================" && \
        curl -s https://artifacts.elastic.co/GPG-KEY-elasticsearch | apt-key add - && \
        echo "deb https://artifacts.elastic.co/packages/7.x/apt stable main" | tee -a /etc/apt/sources.list.d/elastic-7.x.list && \
        apt update && apt install -y logstash=1:7.2.0-1 && \
        : "================filebeat================" && \
        curl -L -O https://artifacts.elastic.co/downloads/beats/filebeat/filebeat-7.2.0-amd64.deb && \
        dpkg -i filebeat-7.2.0-amd64.deb && \
        : "================script================" && \
        chmod 755 /myApp.sh && \
        : "================cleanup================" && \
        apt clean && rm -rf /var/lib/apt/lists/* && \
        : ===========================end===========================

ENTRYPOINT ["/myApp.sh"]
